        private void button2_Click(object sender, EventArgs e)
        {
            try
            {
                SqlConnection con = new SqlConnection("Data Source=(LocalDB)\\MSSQLLocalDB;AttachDbFilename=C:\\Users\\Pratik\\source\\repos\\krishna_bca\\krishna_bca\\bin\\Debug\\Database1.mdf;Integrated Security=True");
